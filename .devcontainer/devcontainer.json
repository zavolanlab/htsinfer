{

    "name": "dev",

    "hostRequirements": {
        "cpus": 2,
        "memory": "4gb",
        "storage": "32gb"
    },

    "build": { "dockerfile": "Dockerfile" },

    "privileged": true,

    "forwardPorts": [8000, 9000],

    "portsAttributes": {
        "8000": {
            "label": "HTTP",
            "protocol": "http",
            "onAutoForward": "notify",
            "elevateIfNeeded": true
        },
        "9000": {
            "label": "HTTPS",
            "protocol": "https",
            "onAutoForward": "notify",
            "elevateIfNeeded": true
        }
    },

    "updateContentCommand": "mamba env create --file environment.yml && mamba env update --file environment-dev.yml",

    "postStartCommand": "cat .devcontainer/PS1.sh >> ~/.bashrc && echo 'conda activate htsinfer\n' >> ~/.bashrc",

    "customizations": {
        "codespaces": {
            "openFiles": []
        },
        "vscode": {
            "settings": {},
            "extensions": [
                "njpwerner.autodocstring",
                "ms-vsliveshare.vsliveshare"
            ]
        }
    }

}
